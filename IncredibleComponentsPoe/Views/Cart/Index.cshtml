@model IEnumerable<IncredibleComponentsPoe.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty. <a asp-controller="Product" asp-action="Index">Browse products</a></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total.ToString("C")</td>
                    <td>
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="rowKey" value="@item.RowKey" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <strong>Total: @Model.Sum(x => x.Total).ToString("C")</strong>
    </p>

    <form asp-action="Checkout" method="post">
        <button type="submit" class="btn btn-success">Checkout</button>
    </form>
}
