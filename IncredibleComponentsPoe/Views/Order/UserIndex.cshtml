@model IEnumerable<IncredibleComponentsPoe.Models.OrderEntity>

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Where(o => o.CustomerUsername == User.Identity.Name))
        {
            <tr>
                <td>@order.ProductNames</td>
                <td>@order.Quantity</td>
                <td>@order.TotalPrice</td>
                <td>@order.Status</td>
                <td>@order.OrderDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
