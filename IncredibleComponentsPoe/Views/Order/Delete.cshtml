@model IncredibleComponentsPoe.Models.OrderEntity

@{
    ViewData["Title"] = "Delete Order";
}
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #fff;
        overflow-x: hidden;
        background: linear-gradient(45deg, #ff7e5f, #feb47b, #86a8e7, #91eae4);
        background-size: 400% 400%;
        animation: gradientShift 20s ease infinite;
    }

 

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    .text-center h1 {
        margin-bottom: 30px;
        color: #ffff66;
        text-shadow: 1px 1px 6px rgba(0,0,0,0.6);
    }

    table {
        background-color: rgba(0,0,0,0.5);
        color: #fff;
        transition: transform 0.2s ease;
    }

    th {
        background-color: rgba(0,0,0,0.7) !important;
    }

    tr:hover {
        background-color: rgba(255, 255, 102, 0.2);
    }

    .btn-primary, .btn-warning, .btn-danger, .btn-info {
        transition: transform 0.2s ease, background-color 0.3s ease;
    }

        .btn-primary:hover {
            transform: scale(1.05);
        }

        .btn-warning:hover {
            transform: scale(1.05);
        }

        .btn-danger:hover {
            transform: scale(1.05);
        }

        .btn-info:hover {
            transform: scale(1.05);
        }
</style>
<div class="text-center">
<h1>Delete Order</h1>
</div>

<h4>Are you sure you want to delete this order?</h4>
<div>
    <strong>Customer ID:</strong> @Model.CustomerRowKey <br />
    <strong>Product ID:</strong> @Model.ProductRowKeys <br />
    <strong>Quantity:</strong> @Model.Quantity <br />
    <strong>Order Date:</strong> @Model.OrderDate
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
