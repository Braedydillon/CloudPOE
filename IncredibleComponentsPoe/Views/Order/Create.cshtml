@model IncredibleComponentsPoe.Models.OrderEntity
<style>
    /* Full-page animated gradient background */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #fff;
        overflow-x: hidden;
        /* Initial gradient */
        background: linear-gradient(45deg, #ff7e5f, #feb47b, #86a8e7, #91eae4);
        background-size: 400% 400%;
        animation: gradientShift 20s ease infinite;
    }

  

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    /* Heading */
    .text-center h1 {
        margin-bottom: 30px;
        color: #ffff66;
        text-shadow: 1px 1px 6px rgba(0,0,0,0.6);
    }

    /* Table styling */
    table {
        background-color: rgba(0,0,0,0.5);
        color: #fff;
        transition: transform 0.2s ease;
    }

    th {
        background-color: rgba(0,0,0,0.7) !important;
    }

    tr:hover {
        background-color: rgba(255, 255, 102, 0.2);
    }

    /* Buttons hover effect */
    .btn-primary, .btn-warning, .btn-danger, .btn-info {
        transition: transform 0.2s ease, background-color 0.3s ease;
    }

        .btn-primary:hover {
            transform: scale(1.05);
        }

        .btn-warning:hover {
            transform: scale(1.05);
        }

        .btn-danger:hover {
            transform: scale(1.05);
        }

        .btn-info:hover {
            transform: scale(1.05);
        }
</style>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Customer</label>
        <select name="CustomerRowKey" class="form-control">
            <option value="">-- Select Customer --</option>
            @foreach (var c in ViewBag.Customers)
            {
                <option value="@c.RowKey">@($"{c.FirstName} {c.LastName}")</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Products</label>
        <select name="ProductRowKeys" multiple class="form-control" size="5">
            @foreach (var p in ViewBag.Products)
            {
                <option value="@p.RowKey">@p.ProductName (@p.Price.ToString("C"))</option>
            }
        </select>
        <small class="text-muted">Hold Ctrl (Windows) / Cmd (Mac) to select multiple products.</small>
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" value="1" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
