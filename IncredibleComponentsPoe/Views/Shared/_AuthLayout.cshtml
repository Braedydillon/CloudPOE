<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LoginAndRegisterFeature</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #74ABE2, #5563DE);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .auth-card {
            width: 100%;
            max-width: 400px;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 0 30px rgba(0,0,0,0.2);
            overflow: hidden;
        }

        .auth-tabs {
            display: flex;
            border-bottom: 1px solid #ddd;
        }

            .auth-tabs a {
                flex: 1;
                text-align: center;
                padding: 12px 0;
                text-decoration: none;
                font-weight: 600;
                color: #555;
                border-bottom: 3px solid transparent;
                transition: 0.3s;
            }

                .auth-tabs a.active {
                    border-bottom: 3px solid #5563DE;
                    color: #5563DE;
                }

        .form-container {
            padding: 2rem;
        }

        input.form-control {
            margin-bottom: 1rem;
        }

        .btn-primary {
            width: 100%;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="auth-card">
        @RenderBody() <!-- This is REQUIRED -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
