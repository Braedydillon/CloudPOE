@model List<IncredibleComponentsPoe.Models.Contract>

@{
    ViewData["Title"] = "Files";
}

<div class="text-center">
    <h1>Files</h1>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Select file to upload:</label>
        <input type="file" name="file" class="form-control-file" />
        <button type="submit" class="btn btn-primary mt-2">Upload</button>
    </div>
</form>

<hr />

@if (Model != null && Model.Count > 0)
{
    <ul class="list-group">
        @foreach (var file in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>
                    @file.Name - Size: @file.DisplaySize - Last Modified: @file.LastModified.LocalDateTime.ToString("g")
                </span>
                <div>
                    <a asp-action="DownloadFile"
                       asp-route-fileName="@file.Name"
                       class="btn btn-info btn-sm">Download</a>

                    <a asp-action="DeleteFile"
                       asp-route-fileName="@file.Name"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this file?');">
                        Delete
                    </a>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p>No files uploaded yet.</p>
}
