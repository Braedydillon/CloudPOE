@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incredible Components</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            height: 100%;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #fff;
            overflow-x: hidden;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            z-index: 1000;
        }

            .navbar a {
                padding: 10px 30px;
                text-decoration: none;
                font-size: 1.5rem;
                color: #fff;
                display: block;
                transition: 0.3s;
            }

                .navbar a:hover {
                    color: #ff00ff;
                }

        .openbtn {
            font-size: 1.5rem;
            cursor: pointer;
            background-color: #111;
            color: white;
            padding: 10px 15px;
            border: none;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1001;
        }

        .main {
            padding: 60px 20px;
            transition: margin-left 0.5s;
        }

        h1 {
            text-align: center;
            font-size: 4rem;
            margin-bottom: 40px;
            text-shadow: 0 0 20px rgba(255,255,255,0.5);
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: auto;
        }

            .grid img {
                width: 100%;
                border-radius: 10px;
                transition: transform 0.3s, box-shadow 0.3s;
                cursor: pointer;
            }

                .grid img:hover {
                    transform: scale(1.1);
                    box-shadow: 0 10px 30px rgba(255,255,255,0.3);
                }

    </style>
</head>
<body>

    <div id="myNav" class="navbar">
        <a href="javascript:void(0)" onclick="closeNav()">✖ Close</a>
        <a href="/home">Home</a>
        <a href="/customer/index">Customers</a>
        <a href="/product/index">Products</a>
        <a href="/order/index">Orders</a>
        <a href="/privacy">Privacy</a>
    </div>

    <button class="openbtn" onclick="openNav()">☰ Menu</button>

    <div class="main">
        <h1>Incredible Components</h1>

        <div class="grid">
            <div class="product-card">
                <a href="/Product">
                <img src="~/HomeImages/RTX4080.jpeg" alt="RTX4080">
                </a>
                <p class="price">R32 000</p>
            </div>

            <div class="product-card">
                <a href="/Product">
                <img src="~/HomeImages/Amd Ryzen 5 8500G.jpeg" alt="Amd Ryzen 5 8500G">
                </a>
                <p class="price">R9000</p>
            </div>

            <div class="product-card">
                <a href="/Product">
                <img src="~/HomeImages/Gtx 1660 Super.jpeg" alt="Gtx 1660 Super">
                </a>
                <p class="price">R6000</p>
            </div>

            <div class="product-card">
                <a href="/Product">
                <img src="~/HomeImages/Rtx 2060.jpeg" alt="Rtx 2060">
                </a>
                <p class="price">R7500</p>
            </div>

            <div class="product-card">
                <a href="/Product">
                <img src="~/HomeImages/I5 12400.jpg" alt="I5 12400">
                </a>
                <p class="price">R2500</p>
            </div>
        </div>
    </div>
    <script>
        function openNav() {
            document.getElementById("myNav").style.width = "250px";
            document.querySelector(".main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("myNav").style.width = "0";
            document.querySelector(".main").style.marginLeft= "0";
        }
    </script>

</body>
</html>
