@model List<IncredibleComponentsPoe.Models.ProductEntity>

<h2>Admin Product List</h2>

<p>You can edit or delete products.</p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.ProductDescription</td>
                <td>@p.Price</td>
                <td>@p.Stock</td>
                <td>
                    <a href="/Product/Edit/@p.RowKey">Edit</a> |
                    <a href="/Product/Delete/@p.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Product/Create">Create New Product</a>
