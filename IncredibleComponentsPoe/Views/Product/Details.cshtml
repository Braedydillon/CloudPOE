@model IncredibleComponentsPoe.Models.ProductEntity

@{
    ViewData["Title"] = "Product Details";
}
<style>
    body {
        background: linear-gradient(135deg, #1f1c2c, #928dab);
        background-attachment: fixed;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .text-center h1 {
        margin-bottom: 30px;
        color: #ffd700;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
    }

    table {
        background-color: rgba(0,0,0,0.6);
        color: #fff;
    }

    th {
        background-color: rgba(0,0,0,0.8) !important;
    }

    .product-img {
        transition: transform 0.3s ease;
        max-width: 150px;
        height: auto;
        border-radius: 8px;
    }

        .product-img:hover {
            transform: scale(1.2);
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.7);
        }

    .btn-primary, .btn-warning, .btn-danger, .btn-info {
        transition: transform 0.2s ease;
    }

        .btn-primary:hover, .btn-warning:hover, .btn-danger:hover, .btn-info:hover {
            transform: scale(1.05);
        }
</style>

<div class="text-center">
<h1>Product Details</h1>
</div>
<div>
    <h4>@Model.ProductName</h4>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.ProductDescription</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>

        <dt class="col-sm-2">Image</dt>
        <dd  <!-- Displaying the image instead of the URL -->
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                            <img src="@Model.ImageUrl" alt="Venue Image" style="max-width: 150px; height: auto;" />
                    }
                    else
                    {
                            <span>No Image</span>
                    }
</dd>

  
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
